{% extends 'base.html.twig' %}

{% block main %}
<section class="hero-container">
    <a href="{{ path('shop_index') }}">
        <div class="hero-column">
            <img src="{{ asset('images/hero/img1.webp') }}" alt="Hero image" class="hero-image" id="left-image">
        </div>
    </a>
    <a href="{{ path('shop_index') }}">
        <div class="hero-column">
            <img src="{{ asset('images/hero/img16.webp') }}" alt="Hero image" class="hero-image" id="right-image">
        </div>
    </a>

    <script type="text/javascript">
        window.heroImages = [
            {% for i in 1..35 %}
        "{{ asset('images/hero/img' ~ i ~ '.webp') }}"{% if not loop.last %}, {% endif %}
        {% endfor %}
        ];
    </script>
</section>

<a href="{{ path('shop_odyssey') }}">
    {% include '_components/scrolling_text.html.twig' with {
    message: 'Nouveau look fashion Odyssey ü™ê',
    messageColor: 'bg-dark'
    } %}
</a>

<section class="product-grid">
    {% for product in products %}
    {% include "_components/card.html.twig" %}
    {% else %}
    <p>Aucun produit disponible.</p>
    {% endfor %}
</section>

{% endblock %}